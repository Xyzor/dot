font-1 = "Font Awesome 5 Free:style=Regular;size=12;0"

modules-left = i3 xwindow
modules-center = 
modules-right = wired-network battery date

separator = |

;dim-value = 1.0

tray-position = right
tray-detached = false
tray-maxsize = 50
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 0
